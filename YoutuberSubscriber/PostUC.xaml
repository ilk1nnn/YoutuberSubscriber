<UserControl x:Class="YoutuberSubscriber.PostUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutuberSubscriber"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Background="MediumPurple">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Image Stretch="Fill" Name="postimg"></Image>
        </Grid>

        <Grid Grid.Row="1">
            <Label Name="titlelbl" HorizontalAlignment="Center" Foreground="White" FontSize="20"></Label>
        </Grid>
        
    </Grid>
</UserControl>
