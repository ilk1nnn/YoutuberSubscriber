<Window x:Class="YoutuberSubscriber.YoutuberW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutuberSubscriber"
        mc:Ignorable="d"
        Title="YoutuberW" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    
    
    
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <Button Click="AddNewPostBtn" Content="Add New Post" FontSize="70" Foreground="White" FontWeight="Medium" Background="DarkOrange"></Button>
        </Grid>

        <Grid Grid.Row="1">
            <Button Click="ShowSub" Content="Show All Subscribers" FontSize="70" Foreground="Gray" FontWeight="Medium" Background="Aquamarine"></Button>
        </Grid>



    </Grid>
    
    
    
</Window>
